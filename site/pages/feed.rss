---
layout: null
contentType: text/xml
preserveExtension: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>
    <title>Herbie - Ein CMS- und Blogsystem basierend auf einfachen Textdateien</title>
    <link>http://www.getherbie.org</link>
    <description>Herbie ist ein einfaches CMS- und Blogsystem, das auf simplen Textdateien basiert. Keine komplizierte Installation, keine Datenbank, nur Textdateien.</description>
    <language>{{ site.language }}</language>
    <copyright>Thomas Breuss</copyright>
    <pubDate>{{ "now"|date('r') }}</pubDate>
    {% for item in site.menu %}
    <item>
    <title>{{ item.title }}</title>
    <link>{{ absUrl(item.route) }}</link>
    {% if item.abstract %}<description>{{ item.abstract }}</description>{% endif %}
    {# if item.author %}<author>{{ item.author }}</author>{% endif #}
    {% if item.id %}<guid>{{ item.id }}</guid>{% endif %}
    {% if item.date %}<pubDate>{{ item.date|date('r') }}</pubDate>{% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>